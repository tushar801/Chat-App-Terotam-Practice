{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "dist",  // compiled files yahan store honge
    "rootDir": "./src",  // source files ka root directory
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": false
  },
  "include": ["src/**/*.ts", "src/app.ts"],  // source files ke path
  "exclude": ["node_modules"]  // node_modules ko exclude karo
}
      